@namespace ShiftPlan.Blazor.WebAssembly.Pages

@page "/admin"

@using Microsoft.AspNetCore.Components.Authorization
@using ShiftPlan.Blazor.Client.Identity
@using ShiftPlan.Blazor.WebAssembly.Components.AdminPanel.Roles
@using ShiftPlan.Blazor.WebAssembly.Components.AdminPanel.Users

<AuthorizeView Roles="Admin">
	<NotAuthorized>
		<div>Only admin have access to this page</div>
	</NotAuthorized>
	<Authorized>
		<a href="/" >Go to ShiftPlan</a>
		<RolesPanel/>
		<UsersPanel />
	</Authorized>
</AuthorizeView>

@code {
	protected override Task OnInitializedAsync()
	{
		return base.OnInitializedAsync();
	}
}
