@namespace FrontendBlazor.Client.Pages.Components
@using FrontendBlazor.Client.Models
@using FrontendBlazor.Client.Services

<ShiftModal Employee="@Employee" Shift="@Shift" Date="Date" OnShiftInsertOrUpdate="OnShiftInsertOrUpdate" OnShiftRemoved="OnShiftRemoved"/>

@code {
    [Parameter]
    public DateOnly Date { get; set; }

    [Parameter]
    public Employee? Employee { get; set; }

	[Parameter]
	public Shift? Shift { get; set; }

	[Parameter]
	public EventCallback<Shift> OnShiftInsertOrUpdate { get; set; }

	[Parameter]
	public EventCallback<Shift> OnShiftRemoved { get; set; }
}
